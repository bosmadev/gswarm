# GSwarm Environment Variables
# Copy to .env and fill in values. Use `npx dotenvx encrypt` to encrypt secrets.

# ─── Admin Authentication ───────────────────────────────────────────────
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme
SESSION_SECRET=generate-a-random-64-char-hex-string

# ─── Server ─────────────────────────────────────────────────────────────
GLOBAL_PORT=3000
GLOBAL_URL=http://localhost:3000
# GLOBAL_APP_NAME=gswarm
# GLOBAL_APP_DISPLAY_NAME=GSwarm
# GLOBAL_APP_DESCRIPTION=Gemini Swarm API Proxy

# ─── Google OAuth (for GCP project token management) ────────────────────
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# ─── Redis (Upstash or self-hosted) ─────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ─── API Keys (JSON array of allowed API keys) ─────────────────────────
API_KEYS=["your-api-key-here"]

# ─── GSwarm Model Configuration ────────────────────────────────────────
# GSWARM_MODEL=gemini-2.5-pro
# GSWARM_MAX_OUTPUT_TOKENS=65536
# GSWARM_TEMPERATURE=1.0
# GSWARM_TOP_P=0.95
# GSWARM_THINKING_ENABLED=true
# GSWARM_THINKING_BUDGET=32768
# GSWARM_MAX_RETRIES=3
# GSWARM_BASE_RETRY_DELAY=1000

# ─── Security ──────────────────────────────────────────────────────────
# TRUSTED_PROXY=127.0.0.1
# DEV_ALLOWED_ORIGIN=http://192.168.1.100:3000

# ─── Error Logging ─────────────────────────────────────────────────────
# ERROR_LOG_MAX_AGE_DAYS=30
# ERROR_LOG_MAX_SIZE_MB=10
# ERROR_LOG_CLEANUP_SCHEDULE=0 0 * * *

# ─── Debug ──────────────────────────────────────────────────────────────
# DEBUG=true
